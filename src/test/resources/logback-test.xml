<configuration>
    <!-- Set root logger to WARN to reduce noise -->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Console output -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce Testcontainers logging -->
    <logger name="org.testcontainers" level="WARN"/>
    <logger name="tc" level="WARN"/>
    <logger name="com.github.dockerjava" level="WARN"/>

    <!-- Reduce Flyway logging -->
    <logger name="org.flywaydb" level="WARN"/>

    <!-- Reduce Exposed logging -->
    <logger name="Exposed" level="WARN"/>

    <!-- Keep your application logs visible -->
    <logger name="com.example" level="DEBUG"/>
</configuration>